
  
<div class="container my-3">
<div class="row justify-content-center">
<div class="col-19 my-4">
<div class="card text-center shadow mb-5 bg-light">
<%= form_with model: @user do |f| %>
  <div class="center">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="center">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="center">
    <%= f.label :picture %>
    <%= f.file_field :picture %>
  </div>
  <div class="center">
    <%= f.submit %>
  </div>
<% end %>