
<div class="col-lg-6 mx-lg-auto my-4">
<div class="card shadow">
<div class="card-header">
<h2 class="card-title text-center", style="color:red;">List of all User </h2>
<center>
  <table>
    <th>Name</th>
    <th>Email</th>
    <th colspan='3'>Actions</th>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= button_to "Show", user_path(user), method: :get %></td>
        <td><%= button_to "Edit", edit_user_path(user), method: :get %></td>
        <td><%= button_to "Delete", user_path(user), method: :delete %></td>
      <% end %>
    </tr>
  </table>
</center>
<div class='center my-4'>
  <%= button_to "new user", new_user_path, method: :get, class: "btn btn-danger" %>
</div>